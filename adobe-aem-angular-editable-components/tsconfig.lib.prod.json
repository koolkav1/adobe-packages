{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "inlineSources": true,
    "target": "es2022",
    "module": "es2020",
    "moduleResolution": "node",
    "importHelpers": true,
    "types": [],
    "lib": ["dom", "es2022"],
    "skipLibCheck": true,
    "strict": true,
    "skipDefaultLibCheck": true
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "src/test.ts",
    "src/**/*.spec.ts"
  ]
}
